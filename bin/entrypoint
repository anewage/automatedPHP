#!/bin/sh

# Fix Permissions
mkdir -pv /var/www/logs
chown -R www-data:www-data /var/www /root
chmod g+w -R /var/www
chmod 700 -R /var/www/.ssh

# tmp dir
mkdir -p /var/www/tmp && chown -R www-data:www-data /var/www/tmp

# Persist Environment
echo "$WEBHOOK_SECRET" > /WEBHOOK_SECRET
echo `export` > /env

# Start www-data entry point (background)
HOME=/var/www sudo -E -u www-data -g www-data /entrypoint-www $@ &

# Start supervisord
[ $# -eq 0 ] && /usr/bin/supervisord -c /etc/supervisord.conf
