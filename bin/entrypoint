#!/bin/bash

# Init home dir
mkdir -pv /var/www/logs
chown -R www-data:www-data /var/www

echo Starting DBus
/etc/init.d/dbus start

echo Starting PHP-FPM
/etc/init.d/php5-fpm start

echo Starting Nginx
rm /var/www/nginx.sock 
rm /run/nginx.pid
chmod 777 /run/
chown www-data:www-data /run/nginx.pid
chown www-data:www-data /etc/nginx -R
chown www-data:www-data /var/log/nginx/ -R
chown www-data:www-data /var/lib/nginx/ -R
setcap 'cap_net_bind_service=+ep' `which nginx`

sudo -u www-data /bin/bash entrypoint-www $@ || exit

echo "Let's go"
tail -f /var/www/logs/*

echo Stopping Container
