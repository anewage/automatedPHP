#!/bin/sh

# init home dir
mkdir -pv /var/www/logs
chown -R www-data:www-data /var/www

# tmp dir
mkdir -p /var/www/tmp && chown -R www-data:www-data /var/www/tmp

# Start www-data entry point
HOME=/var/www sudo -u www-data -g www-data /entrypoint-www $@ || exit

# Start supervisord
/usr/bin/supervisord -c /etc/supervisord.conf
