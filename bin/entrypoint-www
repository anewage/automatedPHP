#!/bin/bash
source /env
cd /var/www

# Generate ssh key
if [ ! -f /var/www/.ssh/id_rsa.pub ] ; then
 echo -e "\n\n\n" | ssh-keygen -t rsa -N "" -f /var/www/.ssh/id_rsa -q

echo ----------------------------------------
 echo Public SSH Key is :
 echo ----------------------------------------
 cat /var/www/.ssh/id_rsa.pub
echo ----------------------------------------

fi

# Clone git repo in /var/www/laravel
if [ -z $GIT_REPO ] ; then
    echo "GIT_REPO is not set..."
    mkdir -vp /var/www/laravel
else
    if [ ! -d /var/www/laravel/.git ] ;then
        echo "Cloning git repo from $GIT_REPO"
        rm -r /tmp/laravel
        yes | GIT_SSH_COMMAND='ssh -o StrictHostKeyChecking=no' git clone --recursive "$GIT_REPO" /tmp/laravel
		cp -rv /tmp/laravel /var/www/laravel 
    fi
fi

# Webhook
mkdir -p /var/www/laravel/public && \
ln -fs /webhook.php /var/www/laravel/public

# Remove lock file
if [ -f /var/www/laravel/.laas.lock ] ; then
	rm /var/www/laravel/.laas.lock
fi

# Execute cmd
if [ $# -eq 0 ] ; then
    echo "Executing update script..."
    /update
else
    $@
fi
