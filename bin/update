#!/bin/bash

cd /var/www/laravel

## LOCK
if [ -f .lass.lock ] ; then
	echo "Lock file '.lass.lock' exists, it seems it is already updating ..."
	exit 1
fi
touch .lass.lock

git pull
composer install --prefer-source

# Init
if [ ! -e .laas_init ] ; then
  cp .env.example .env
  php artisan key:generate
  touch .laas_init
fi

# Let's Encrypt
/var/www/letsencrypt/letsencrypt.sh --cron

## LOCK
rm .lass.lock
